---
kind: archives
changefreq: daily
priority: 1
---
<h2>By year</h2>

<ul>
  <% site.blog.calendar.each do |year, page| %>
    <li itemscope itemtype="http://schema.org/Article">
      <a itemprop="url" href="<%= page.path %>">
        <span itemprop="name">
          <%= year %> (<%= page[:page_items].size %>)
        </span>
      </a>
    </li>
  <% end %>
</ul>

<h2>By tag</h2>

<ul>
  <% site.blog.tags.sort_by(&:first).each do |tag, page| %>
    <li itemscope itemtype="http://schema.org/Article">
      <a itemprop="url" href="<%= page.path %>">
        <span itemprop="name">
          <%= render_tag(tag) %> (<%= page[:page_items].size %>)
        </span>
      </a>
    </li>
  <% end %>
</ul>

